<%= render "layouts/errors", object: @review %>

<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :content_body, class: "form-control" %>
  </div>
  <p><%= f.submit class: "btn btn-dark" %></p>
<% end %>
